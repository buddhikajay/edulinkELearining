{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Url</th>
                <th>Bgcolor</th>
                <th>Fgcolor</th>
                <th>Cssclass</th>
                <th>Startdatetime</th>
                <th>Enddatetime</th>
                <th>Allday</th>
                <th>Tutoringsession</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('events_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.bgColor }}</td>
                <td>{{ entity.fgColor }}</td>
                <td>{{ entity.cssClass }}</td>
                <td>{% if entity.startDatetime %}{{ entity.startDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endDatetime %}{{ entity.endDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.allDay }}</td>
                <td>{{ entity.tutoringSession }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('events_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('events_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('events_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
