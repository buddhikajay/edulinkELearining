{% extends "UserBundle::form_layout.html.twig" %}
{% block form %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <span id="reauth-email" class="reauth-email"></span>
        {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
        <input type="text" id="username" class="form-control" name="_username" placeholder="Username / Email" value="{{ last_username }}" required="required" />
        {#<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>#}

        {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
        <input type="password" id="password" class="form-control" name="_password" placeholder="Password" required="required" />

        <div id="remember" class="checkbox">
            <label>
                {#<input type="checkbox" value="remember-me"> Remember me#}
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember Me
                {#<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Sign in</button>
        {#<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />#}
    </form><!-- /form -->
    <a href="#" class="forgot-password">
        Forgot the password?
    </a>

{% endblock form %}
