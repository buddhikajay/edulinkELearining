{% extends "@App/homepage/homepageLayout.html.twig" %}
{% block body %}
    {{ parent() }}
    <div class="row" style="margin-top: 10%;margin-left: 5vw">
        <div class="col-md-offset-1 col-md-3" >
            <a class="btn btn-success btn-bg bg-btn"  style="color:#0d3349" href="{{ path('schedule') }}">
                <span class="bg-btn-text">View this week <br> class schedule</span>
                <div style="margin-top: 5%"> <img src="{{ asset('/images/schedule.png') }}" width="80px"></div>
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info btn-bg bg-btn" style="color:#0d3349" href="{{ path('teacher_classroom') }}">
                <span class="bg-btn-text">Start the class</span>
                <div style="margin-top: 5%"> <img src="{{ asset('/images/class.png') }}" width="130px"></div>
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info btn-bg bg-btn" style="color:#0d3349" href="https://files.siplo.lk">
                <span class="bg-btn-text">Upload Course<br> material</span>
                <div style="margin-top: 5%"> <img src="{{ asset('/images/document.png') }}" width="80px"></div>
            </a>
        </div>
    </div>
{% endblock %}