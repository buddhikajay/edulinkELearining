{% extends "@App/classroom/classroomLayout.html.twig" %}
{% block stylesheets %}

    {{ parent() }}

{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="row" style="margin-top: 5%">
        <div class="col-md-offset-2 col-md-4" >
            <button class="btn btn-success btn-bg very-bg-btn" onclick="openWhiteboardWindow();"><span class="very-bg-btn-text">WHITEBOARD</span></button>
        </div>
        <div class="col-md-4">
            <button class="btn btn-info btn-bg very-bg-btn" onclick="openVideoWindow();"><span class="very-bg-btn-text">VIDEO</span></button>
        </div>
    </div>


{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script>
       function openVideoWindow(){
           window.open('/classroom/teacher/video','Video','fullscreen=1');
       }
       function openWhiteboardWindow(){
           window.open('/classroom/teacher/whiteboard','Whiteboard','fullscreen=1');
       }
    </script>

{% endblock %}